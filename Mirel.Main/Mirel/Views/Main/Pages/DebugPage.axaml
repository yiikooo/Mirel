<UserControl
    Name="Root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Mirel.Views.Main.Pages.DebugPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Margin" Value="0,0,5,5" />
        </Style>
    </UserControl.Styles>
    <WrapPanel Margin="7,0,5,5">
        <Button
            Click="Notice"
            Content="Notice Info"
            Tag="Info" />
        <Button
            Click="Notice"
            Content="Notice Warn"
            Tag="Warn" />
        <Button
            Click="Notice"
            Content="Notice Error"
            Tag="Error" />
        <Button
            Click="Notice"
            Content="Notice Success"
            Tag="Success" />
        <Button
            Click="Notice"
            Content="Notice Long Time"
            Tag="Long" />
    </WrapPanel>
</UserControl>