<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Mirel.Views.Main.Pages.AsidePages.TabsPage"
    x:DataType="asidePages:TabsPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:asidePages="clr-namespace:Mirel.Views.Main.Pages.AsidePages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entries="clr-namespace:Mirel.Classes.Entries"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Margin" Value="5,1" />
        </Style>
    </UserControl.Styles>
    <Border Name="Root">
        <ScrollViewer Margin="0,5,0,0">
            <ListBox ItemsSource="{Binding Data.TabService.AppTabs}" Name="ListBox">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="entries:TabSEntry">
                        <DockPanel VerticalAlignment="Center">
                            <DockPanel.ContextFlyout>
                                <MenuFlyout Opening="TabContextMenu_Opening">
                                    <MenuItem
                                        Header="关闭标签页"
                                        InputGesture="Ctrl + W"
                                        Name="CloseTabMenuItem">
                                        <MenuItem.Icon>
                                            <PathIcon Data="M7.46,11.88L8.88,10.46L11,12.59L13.12,10.46L14.54,11.88L12.41,14L14.54,16.12L13.12,17.54L11,15.41L8.88,17.54L7.46,16.12L9.59,14L7.46,11.88M3,3H21A2,2 0 0,1 23,5V19A2,2 0 0,1 21,21H3A2,2 0 0,1 1,19V5A2,2 0 0,1 3,3M3,5V19H21V9H13V5H3Z" Width="17" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="在新窗口中打开" Name="OpenInNewWindowMenuItem">
                                        <MenuItem.Icon>
                                            <PathIcon Data="M12,10L8,14H11V20H13V14H16M19,4H5C3.89,4 3,4.9 3,6V18A2,2 0 0,0 5,20H9V18H5V8H19V18H15V20H19A2,2 0 0,0 21,18V6A2,2 0 0,0 19,4Z" Width="17" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="移动到窗口" Name="MoveToWindowMenuItem">
                                        <MenuItem.Icon>
                                            <PathIcon Data="M14,14H16L12,10L8,14H10V18H14M20,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6A2,2 0 0,0 20,4M20,18H4V6H20V18Z" Width="17" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </MenuFlyout>
                            </DockPanel.ContextFlyout>
                            <PathIcon
                                Data="{Binding Entry.Icon}"
                                DockPanel.Dock="Left"
                                Height="14"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Width="14" />
                            <TextBlock
                                DockPanel.Dock="Left"
                                Text="{Binding Entry.Title}"
                                VerticalAlignment="Center" />
                            <Border
                                Background="{DynamicResource PopupBackgroundColor}"
                                CornerRadius="{DynamicResource CardCornerRadius}"
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right"
                                Margin="0,1,0,0"
                                Padding="6,4,6,3"
                                VerticalAlignment="Center">
                                <TextBlock FontSize="11" Text="{Binding Window.WindowId}" />
                            </Border>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Border>
</UserControl>